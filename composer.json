{
	"name": "werx/config",
	"type": "library",
	"license": "MIT",
	"description": "Use environment-specific configuration files in your app.",

	"authors":[
		{
			"name": "Josh Moody",
			"email": "jgmoody@gmail.com"
		}
	],

	"require": {
		"php": ">= 5.4"
	},

	"require-dev": {
		"phpunit/phpunit": "4.4.*",
		"squizlabs/php_codesniffer": "1.*"
	},

	"autoload":	{
		"psr-4": {
			"werx\\Config\\": "src/",
			"werx\\Config\\Providers\\": "src/Providers"
		}
	}, 
	"autoload-dev":	{
		"psr-4": {
			"werx\\Config\\Tests\\": "Tests/"
		}
	}
}
